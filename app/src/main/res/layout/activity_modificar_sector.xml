<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="type.proy.com.inventarioandroid.actividades.sector.ModificarSectorActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Modificar Sector"
        android:id="@+id/lblModificarSector"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre Sector"
        android:id="@+id/lblModNombreSector"
        android:layout_below="@+id/lblModificarSector"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="114dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtModNombreSector"
        android:layout_below="@+id/lblModNombreSector"
        android:layout_alignRight="@+id/lblModNombreSector"
        android:layout_alignEnd="@+id/lblModNombreSector" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        android:id="@+id/btnModNombreSector"
        android:layout_below="@+id/txtModNombreSector"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp"
        android:clickable="true"
        android:onClick="onClickBtnModificarSector"/>
</RelativeLayout>
